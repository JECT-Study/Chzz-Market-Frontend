{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    /* absolute paths */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["/*"],
      "@/components/*": ["components/*"],
      "@/shared/assets/*": ["shared/assets/*"],
      "@/constants/*": ["constants/*"],
      "@/mocks/*": ["mocks/*"],
      "@/pages/*": ["pages/*"],
      "@/api/*": ["api/*"],
      "@/utils/*": ["utils/*"],
      "@/models/*": ["models/*"],
      "@/store/*": ["store/*"],
      "@/stories/*": ["stories/*"],
    }
  }
}